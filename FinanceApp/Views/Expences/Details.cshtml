@model FinanceApp.Models.Expences

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white text-center fw-bold">
                    📋 Expense Details
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">📝 Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-semibold">💵 Amount</dt>
                        <dd class="col-sm-8 text-success fw-bold">₹ @Model.Amount</dd>

                        <dt class="col-sm-4 fw-semibold">📂 Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4 fw-semibold">📅 Date</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("dd MMM yyyy")</dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            ✏️ Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            ⬅ Back to List
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
